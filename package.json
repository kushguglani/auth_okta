{
  "name": "kta",
  "version": "1.0.0",
  "description": "React and Node.js full-stack boilerplate",
  "scripts": {
    "install:all": "cd backend && npm install && cd ../frontend && npm install",
    "start:backend": "cd backend && npm run dev",
    "start:frontend": "cd frontend && npm start",
    "start": "echo 'Run npm run start:backend and npm run start:frontend in separate terminals'",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:watch": "npm run test:backend:watch",
    "test:backend:watch": "cd backend && npm test -- --watch",
    "test:frontend:watch": "cd frontend && npm test -- --watch",
    "test:coverage": "npm run test:backend:coverage && npm run test:frontend:coverage",
    "test:backend:coverage": "cd backend && npm test -- --coverage",
    "test:frontend:coverage": "cd frontend && npm test -- --coverage"
  },
  "keywords": [
    "react",
    "nodejs",
    "express",
    "boilerplate",
    "fullstack"
  ],
  "author": "",
  "license": "ISC",

}
